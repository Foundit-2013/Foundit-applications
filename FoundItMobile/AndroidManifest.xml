<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foundit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/home_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.foundit.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.foundit.AllListActivity"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name="com.example.foundit.Sample"
            android:label="@string/title_activity_sample" >
        </activity>
        <activity
            android:name="com.example.foundit.ItemSelectedActivity"
            android:label="@string/title_activity_item_selected" >
        </activity>
        <activity
            android:name="com.example.foundit.FoundItActivity"
            android:label="@string/title_activity_found_it" >
        </activity>
        <activity
            android:name="com.example.foundit.ListTabberActivity"
            android:label="@string/title_activity_list_tabber" >
        </activity>
        <activity
            android:name="com.example.foundit.LostListActivity"
            android:label="@string/title_activity_lost_list" >
        </activity>
        <activity
            android:name="com.example.foundit.LostItActivity"
            android:label="@string/title_activity_lost_it" >
        </activity>
    </application>

</manifest>